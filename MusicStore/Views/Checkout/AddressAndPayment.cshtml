@model MusicStore.Models.Order
@{
    ViewBag.Title = "AddressAndPayment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/sajat.css" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()
    <div style=" font-weight:bold; text-align:center;">
        <fieldset style="padding:15px;  box-shadow: 0px 7px 18px -1px rgba(0,0,0,0.71);">
            <legend style=" color:white; font-weight:bold; text-align:center;">Számlázási és szállítási információk</legend>
            <div style="color:darkgray" >
                @Html.EditorForModel()
            </div>
            <hr class="featurette-divider -hr_mine">
            <h2 style=" color:white; font-weight:bold; text-align:center;">Fizetés</h2>
            <p>Használja a "FREE" kódot,hogy ingyenesen teli tankoljuk az autót önnek!</p>
            <div class="editor-label" style="color:white;">
                @Html.Label("Promo Cod", "Promociós kód")
            </div>
            <div class="editor-field">
                @Html.TextBox("PromoCode")
            </div>

            <input type="submit" value="Megrendelés" class="sajatgomb" />
        </fieldset>
    </div>

    <hr class="featurette-divider -hr_mine">
}
