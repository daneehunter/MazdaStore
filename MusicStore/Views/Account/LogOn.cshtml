@model Mvc3ToolsUpdateWeb_Default.Models.LogOnModel
@{
    ViewBag.Title = "Log On";
}
<link href="~/sajat.css" rel="stylesheet" />
<h1 style="color:white; font-weight:bold; text-align:center;">Bejelentkezés</h1>

<h4 style="color:white; font-weight:bold; text-align:center;">
    Ha esetleg még nem regisztrált tegye meg most:
    <br />
    <br />
    <a href="~/Account/Register">REGISZTRÁCIÓ</a>

</h4>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@Html.ValidationSummary(true, "Nem sikerült bejelentkezni próbálja meg újra!")
@using (Html.BeginForm("LogOn","Account",FormMethod.Post))
{
    <div style=" font-weight:bold; text-align:center;">
        <fieldset>
            <legend style=" color:white; font-weight:bold; text-align:center;">Felhasználó információ</legend>
            <div class="editor-label" style="color:white;">
                @Html.LabelFor(m => m.UserName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
            <div class="editor-label" style="color:white;">
                @Html.LabelFor(m => m.Password)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            @*<div class="editor-label" style="color:white;">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe)
            </div>*@
            <p>
                <input class="sajatgomb" style="background-color:#1b1c23; border: #fa7c03 1px solid; border-radius:6px;  padding: 6px 13px; font-size:12px; font-weight:bold; background-size:auto;" type="submit" value="Bejelentkezés" />
            </p>
        </fieldset>
    </div>
}<hr class="featurette-divider -hr_mine">
